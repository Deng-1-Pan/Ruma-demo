{
  "name": "ruma-demo",
  "version": "1.0.0",
  "description": "RuMa情感支持聊天机器人前端演示版 - 独立前端演示",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:fast": "vite build --mode production",
    "build:light": "cross-env NODE_OPTIONS='--max-old-space-size=1024' vite build --mode development",
    "build:optimized": "cross-env NODE_OPTIONS='--max-old-space-size=2048' tsc && vite build",
    "build:2gb": "cross-env NODE_OPTIONS='--max-old-space-size=2048' vite build --mode production",
    "build:docker": "cross-env NODE_OPTIONS='--max-old-space-size=1536 --max_old_space_size=1536 --optimize-for-size' vite build --mode production",
    "build:ci": "cross-env NODE_OPTIONS='--max-old-space-size=1024' vite build --mode production --minify esbuild",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "serve": "serve -s dist -l 3000",
    "start": "npm run serve",
    "deploy": "npm run build && npm run serve",
    "deploy:fast": "npm run build:fast && npm run serve",
    "deploy:2gb": "npm run build:2gb && npm run serve",
    "docker:build": "docker build -t ruma-demo .",
    "docker:build:light": "docker build -f Dockerfile.light -t ruma-demo-light .",
    "docker:run": "docker run -d -p 80:80 --name ruma-demo-app ruma-demo",
    "docker:run:light": "docker run -d -p 80:80 --name ruma-demo-app ruma-demo-light",
    "docker:stop": "docker stop ruma-demo-app && docker rm ruma-demo-app",
    "docker:deploy:light": "bash quick-deploy-light.sh"
  },
  "dependencies": {
    "@types/d3": "^7.4.3",
    "@types/file-saver": "^2.0.7",
    "antd": "^5.12.8",
    "axios": "^1.6.5",
    "d3": "^7.9.0",
    "dayjs": "^1.11.10",
    "echarts": "^5.4.3",
    "echarts-for-react": "^3.0.2",
    "file-saver": "^2.0.5",
    "html2canvas": "^1.4.1",
    "plotly.js-dist-min": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-plotly.js": "^2.6.0",
    "react-router-dom": "^6.8.1",
    "socket.io-client": "^4.7.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/plotly.js": "^3.0.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@types/react-plotly.js": "^2.6.3",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "cross-env": "^7.0.3",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "serve": "^14.2.1",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  },
  "keywords": [
    "emotional-support",
    "chatbot",
    "react",
    "typescript",
    "frontend"
  ],
  "author": "RuMa Team",
  "license": "ISC"
}
